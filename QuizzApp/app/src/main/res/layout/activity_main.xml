<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgd"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Choose Category"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="758dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-16dp"
        android:background="@drawable/back_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0"
        >

        <LinearLayout
            android:id="@+id/geography_btn"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:background="@drawable/backg_cate_items"
            android:backgroundTint="#8174EA"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/math_btn"
            app:layout_constraintEnd_toEndOf="@+id/history_btn"
            app:layout_constraintStart_toStartOf="@+id/history_btn"
            app:layout_constraintTop_toTopOf="@+id/math_btn">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/geography" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geography"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_btn"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/backg_cate_items"
            android:backgroundTint="#EFAFBA"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/science_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/science_btn"
            app:layout_constraintTop_toTopOf="@+id/science_btn">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/history" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/math_btn"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backg_cate_items"
            android:backgroundTint="#DDBBFF"
            android:gravity="center"
            android:orientation="vertical"
            app:="parent"
            app:layout_constraintEnd_toEndOf="@+id/science_btn"
            app:layout_constraintStart_toStartOf="@+id/science_btn"
            app:layout_constraintTop_toBottomOf="@+id/science_btn">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/math" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/science_btn"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backg_cate_items"
            android:backgroundTint="@color/category"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/science" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>